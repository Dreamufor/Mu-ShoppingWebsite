@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="container-fluid">
    <p style="border:solid lightgray;border-width: 0 0 1px 0;margin:1% 7%;">  <a class="text-muted" asp-area="" asp-controller="Home" asp-action="Index"> Home</a> > @ViewData["Title"]</p>
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-3">
            <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
                <h4 class="text-center alert-light">Create a new account.</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="basic-addon1"><i class="fas fa-user"></i></span>
                    </div>
                    <input class="form-control" type="text" placeholder="User name" />
                    <span class="text-danger"></span>
                </div>

                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="basic-addon1">@@</span>
                    </div>
                    <input asp-for="Email" class="form-control" type="text" placeholder="Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="basic-addon1"><i class="fas fa-phone"></i></span>
                    </div>
                    <input class="form-control" type="text" placeholder="Phone number" />
                    <span class="text-danger"></span>
                </div>

                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="basic-addon1"><i class="fas fa-unlock-alt"></i></span>
                    </div>
                    <input asp-for="Password" class="form-control" placeholder="Password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="basic-addon1"><i class="fas fa-unlock-alt"></i></span>
                    </div>
                    <input asp-for="Password" class="form-control" placeholder="Confirm password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group text-center">
                    <button type="button" class="btn btn-info" style="width:100%;">Create your account</button>
                </div>

            </form>
        </div>
        <div class="col-md-7"></div>
    </div>
</div>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
