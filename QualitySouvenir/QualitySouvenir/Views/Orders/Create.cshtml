@model QualitySouvenir.Models.Order

@{
    ViewData["Title"] = "Create";
}
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<h3>Please Fill in the Order Details</h3>

<h4>Order</h4>
<hr />
<div class="container-fluid">
    <div class="row">
        <div class="col-md-2"></div>
        <form asp-action="Create">
            <div class="col-md-8">
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="FirstName"></label>
                    <div>
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="LastName"></label>
                    <div>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Phone"></label>
                    <div>
                        <input asp-for="Phone" class="form-control" />
                        <span asp-validation-for="Phone" class="text-danger" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="City"></label>
                    <div>
                        <input asp-for="City" class="form-control" />
                        <span asp-validation-for="City" class="text-danger" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="PostalCode"></label>
                    <div>
                        <input asp-for="PostalCode" class="form-control" />
                        <span asp-validation-for="PostalCode" class="text-danger" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="State"></label>
                    <div>
                        <input asp-for="State" class="form-control" />
                        <span asp-validation-for="State" class="text-danger" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Country"></label>
                    <div>
                        <input asp-for="Country" class="form-control" />
                        <span asp-validation-for="Country" class="text-danger" />
                    </div>
                </div>
                <div class="form-group">
                    <div>
                        <button type="submit" class="btn btn-default btn-lg">
                            Place Order <span class="glyphicon glyphicon-fast-forward"></span>
                        </button>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <div class="col-md-2"></div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
