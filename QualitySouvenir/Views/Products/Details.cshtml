@model QualitySouvenir.Models.Souvenir

@{
    ViewData["Title"] = "Details";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <div class="card mt-3">
                <div class="card-header">
                    Quality Souvenir
                </div>
                <div class="card-body">
                    @{
                        var imgUrl = @Href("~" + Model.Image);
                        var errImg = @Href("/images/main/showcase.jpg");
                    }
                    <div class="row">
                        <div class="col-md-6">
                            <img class="img-fluid" src="@imgUrl" alt="Souvenir Image" onerror="this.onerror = null; this.src = '@errImg'">
                        </div>
                        <div class="col-md-6">
                            <div>
                                <a asp-action="AddToCart" asp-controller="ShoppingCart" asp-route-id="@Model.ID" 
                                   asp-route-sortOrder ="@ViewData["CurrentSort"]"
                                   asp-route-currentFilter="@ViewData["CurrentFilter"]"
                                   class="alert-light alert-link float-right" title="Add to cart"><i class="fa fa-cart-plus" style="font-size:30px;"></i></a>
                            </div>
                            <dl class="dl-horizontal mt-5">
                                <dt>
                                    @Html.DisplayNameFor(model => model.Name)
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => model.Name)
                                </dd>
                                <dt>
                                    @Html.DisplayNameFor(model => model.Price)
                                </dt>
                                <dd>
                                    <span class="font-weight-bold" style="color:orange">NZD $@Html.DisplayFor(model => model.Price)</span>
                                </dd>
                                <dt>
                                    @Html.DisplayNameFor(model => model.Description)
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => model.Description)
                                </dd>
                            </dl>
                            <div>
                                <a asp-action="Index" class="float-right btn btn-outline-secondary">
                                    Back to products
                                </a>          
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3"></div>
    </div>
</div>
