@model IEnumerable<QualitySouvenir.Models.Order>

@{
    ViewData["Title"] = "My Orders";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <h2>View Orders</h2>

            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.ID)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Date)
                        </th>
                        <th>
                            Full Name
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SubTotal)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.GST)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.GrandTotal)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Status)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Date)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)
                            </td>
                            <td>
                                NZD$ @Html.DisplayFor(modelItem => item.SubTotal)
                            </td>
                            <td>
                                NZD$ @Html.DisplayFor(modelItem => item.GST)
                            </td>
                            <td>
                                NZD$ @Html.DisplayFor(modelItem => item.GrandTotal)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Status)
                            </td>
                            <td>
                                <a asp-controller="Orders" asp-action="OrderDetails" asp-route-id="@item.ID" class="btn btn-outline-info">Details</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="col-md-2"></div>
    </div>
</div>